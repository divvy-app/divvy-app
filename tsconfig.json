{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2021",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false
  },

  "include": ["./src"]
}
